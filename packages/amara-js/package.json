{
  "name": "@amara-js/core",
  "version": "1.0.0",
  "description": "Amara JavaScript runtime and core",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.mjs",
      "require": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./runtime": {
      "import": "./dist/runtime/index.mjs",
      "require": "./dist/runtime/index.js",
      "types": "./dist/runtime/index.d.ts"
    },
    "./web": {
      "import": "./dist/runtime/web/index.mjs",
      "require": "./dist/runtime/web/index.js",
      "types": "./dist/runtime/web/index.d.ts"
    },
    "./native": {
      "import": "./dist/runtime/native/index.mjs",
      "require": "./dist/runtime/native/index.js",
      "types": "./dist/runtime/native/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist .tsbuildinfo",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@types/react": "^18.2.56",
    "react": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.28",
    "@types/react-dom": "^18.2.19",
    "@vitest/coverage-v8": "^1.3.1",
    "jsdom": "^24.0.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.3.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "amara",
    "react",
    "runtime",
    "ui",
    "framework",
    "web",
    "native"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/amara.git",
    "directory": "packages/amara-js"
  },
  "bugs": {
    "url": "https://github.com/your-org/amara/issues"
  },
  "homepage": "https://github.com/your-org/amara#readme"
}
