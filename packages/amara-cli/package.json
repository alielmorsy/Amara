{
  "name": "@amara/cli",
  "version": "1.0.0",
  "description": "Command line interface for Amara framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "amara": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "clean": "rimraf dist .tsbuildinfo"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@amara/js": "workspace:*",
    "@amara/jsx-transform": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "@amara/js": "workspace:*",
    "@amara-jsx-transform": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
