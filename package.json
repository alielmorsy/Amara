{
  "name": "@amara-js",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:js": "turbo run build --filter='@amara/js'",
    "build:jsx": "turbo run build --filter='@amara-jsx-transform'",
    "build:cli": "turbo run build --filter='@amara/cli'",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
